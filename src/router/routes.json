{
  "/": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Homepage is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/browse": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Browse properties is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/property/:id": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Property details are public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/owner-dashboard": {
    "allow": {
      "when": {
